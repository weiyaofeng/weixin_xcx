/**app.wxss**/
page{
  font-family: "微软雅黑";
  background-color: #fff;
  display:flex;
  flex-direction: column;
}

.page-header{
  display:flex;
  justify-content: center;
  border-bottom: 1rpx solid black;
  margin-bottom: 10rpx;
}
.page-header-text{
  padding:20rpx 40rpx;
  color:#999;
  font-size:40rpx;
  text-align:center;
}

.page-body{
  display: flex;
  flex:1;
  flex-direction: column;
}
.item{
  display: flex;
  padding:20rpx 40rpx;
  border-bottom: 2rpx solid #eee;
}
.item .poster{
  width:128rpx;
  height:128rpx;
  margin-right:20rpx;
}
.item .meta{
  flex: 1;
}
.meta .title,.meta .sub-title{
  display: block;
  margin-bottom:14rpx;
}
.meta .title{
  font-size:32rpx;
}
.meta .sub-title{
  font-size:22rpx;
  color:#c0c0c0;
}
.meta .artists{
  font-size:26rpx;
  color:#999;

}
item .rating{
  font-size:28rpx;
  color:red;
  font-weight: bold;
}


